# Server Configuration
PORT=5000
NODE_ENV=development

# Database
DATABASE_URL=postgresql://username:password@localhost:5432/connecta

# JWT
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d

# Google OAuth
GOOGLE_OAUTH_CLIENT_ID=YOUR_GOOGLE_CLIENT_ID_HERE
GOOGLE_OAUTH_CLIENT_SECRET=YOUR_GOOGLE_CLIENT_SECRET_HERE
GOOGLE_CALLBACK_URL=http://localhost:5000/auth/google/callback

# MongoDB
MONGO_URI=mongodb://127.0.0.1:27017/connecta

# Session
SESSION_SECRET=your-session-secret-here

# AI Services
HUGGINGFACE_API_KEY=your-huggingface-api-key-here
OPENROUTER_API_KEY=your-openrouter-api-key-here

# Webhooks
WEBHOOK_SECRET=your-webhook-secret-here

# Email Service (Optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@example.com
EMAIL_PASSWORD=your-email-password-here

# Payment Gateway (Optional)
PAYSTACK_SECRET_KEY=your-paystack-secret-key-here
PAYSTACK_PUBLIC_KEY=your-paystack-public-key-here

# SMEPlug API
SMEPLUG_API_KEY=your-smeplug-api-key-here

# Other Services
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret
